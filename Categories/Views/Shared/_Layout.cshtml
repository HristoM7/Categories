@using Categories.Data
@inject ApplicationDbContext Db
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Categories</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Categories.styles.css" asp-append-version="true" />

    <style>
        /* Градиентен фон за страницата */
        body {
            min-height: 100vh;
            background: linear-gradient(135deg,#eef3ff 0%,#ffffff 60%,#f7f9ff 100%);
        }
        /* Полупрозрачна „glass“ навигация */
        .navbar-glass {
            background: linear-gradient(90deg, rgba(255,255,255,.78), rgba(255,255,255,.42));
            backdrop-filter: blur(6px);
        }
    </style>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light navbar-glass border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo.png" alt="Logo" width="28" height="28" class="me-2" />
                Categories
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNavbar" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    <!-- Падащо меню Категории -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="catDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Категории
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="catDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Home" asp-action="Index">Всички</a>
                            </li>
                            @* динамично от базата *@
                            @foreach (var c in Db.Categories.OrderBy(x => x.Name))
                            {
                                <li>
                                    <!-- Ако филтрираш продуктите по друг параметър, смени asp-route-categoryId -->
                                    <a class="dropdown-item"
                                       asp-controller="Products" asp-action="Index"
                                       asp-route-categoryId="@c.Id">
                                        @c.Name
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>

                <!-- Дясно подравнен бутон за вписване -->
                <div class="d-flex">
                    <a class="btn btn-outline-primary" href="/Identity/Account/Login">Вписване</a>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; @DateTime.Now.Year - Categories -
        <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
